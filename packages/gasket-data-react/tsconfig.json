{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016", "DOM"],
    "target": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "lib",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/*"
      ]
    },
    "jsx": "react",
    "noEmit": false
    //    "strict": true
  },
  "include": [
    "./src/**/*"
  ]
}
